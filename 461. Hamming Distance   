
public class Solution {
    public int hammingDistance(int x, int y) {
        int res = 0;
        while(x != 0 || y != 0){
            int bit1 = (x == 0 ? 0 : x & 1);  //x & 1 is equal to x % 2ã€€
            int bit2 = (y == 0 ? 0 : y & 1);
            if(bit1 != bit2) res++;
            x = x >> 1; //x >> 1 is equal to x / 2
            y = y >> 1;
        }
        return res;
    }
}

public class Solution {
    public int hammingDistance(int x, int y) {
        int count = 0;
        int res = x ^ y;
        for(int i = 0; i < 32; i++){
            count += res & 1;
            res = res >> 1;
        }
        return count;
    }
}
