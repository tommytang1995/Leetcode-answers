public class Solution {
    public String getPermutation(int n, int k) {
        StringBuilder sb = new StringBuilder();
        List<Integer> list = new ArrayList<>();
        int[] fac = new int[n+1];
        int sum = 1;
        fac[0] = 1;
        for(int i = 1 ; i <= n ; i++){
            sum*=i;
            fac[i]=sum;
        }
        for(int i = 1 ; i <=n ; i++){
            list.add(i);
        }
        k--;
        for(int i = 1 ; i <= n ; i++){
            int index = k/fac[n-i];
            sb.append(list.get(index));
            list.remove(index);
            k=k-index*fac[n-i];
        }
        return String.valueOf(sb);
    }
}
